<robot name="2_R_robot">
    <link name="fixed_base">
    <visual>
        <geometry>
            <cylinder length="0.05" radius="0.1"/>
        </geometry>
        <origin xyz="0 0 -0.975"/>
        <material name="green">
           <color rgba="0 0.8 0 1"/>
        </material>
    </visual>
    </link>

    <link name="link_1">
    <visual>
        <geometry>
            <box size="0.6 0.1 0.1"/>
        </geometry>
        <origin rpy="0 -0.68 0" xyz="0.25 0 -0.75"/>
        <material name="blue">
           <color rgba="0 0 0.8 1"/>
        </material>
    </visual>
    </link>

    <link name="link_2"> 
    <visual>
        <geometry>
            <box size="0.6 0.1 0.1"/>
        </geometry>
        <origin xyz="0.6 0 -0.37" rpy="0 -1 0"/>
        <material name="red">
           <color rgba="0.8 0 0 1"/>
        </material>
    </visual>
    </link>
    
  
    <joint name="Revolute_joint_1" type="revolute">
        <parent link="fixed_base"/>
        <child link="link_1"/>
        <origin rpy="0 0 0" xyz="0 0 0"/>
        <axis xyz="0 1 0"/>
        <limit effort="1000.0" lower="-1.57" upper="1.57" velocity="0.5"/>
    </joint>

    <joint name="Revolute_joint_2" type="revolute">
        <parent link="link_1"/>
        <child link="link_2"/>
        <origin rpy="0 0 0" xyz="0 0 0"/>
        <axis xyz="0 1 0"/>
        <limit effort="1000.0" lower="-1.57" upper="1.57" velocity="0.5"/>
    </joint>
</robot>
